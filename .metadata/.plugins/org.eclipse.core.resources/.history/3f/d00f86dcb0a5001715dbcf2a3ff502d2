try:
    with open('sketch.txt') as data:
        for each_line in data:
            try:
                (role, line) = each_line.split(':')
                if role =='Man':
                    man=[]
                    man.append(line)
                elif role == 'Other Man':
                    other=[]
                    other.append(line)
            except ValueError:
                pass
    try:
        with open('man_data.txt', 'w') as man_out:
            print(man, file=man_out)
    except:
        print('the script file is missing.')
    try:
        with open('other_data.txt', 'w+') as other_out:
            print(other, file=other_out)
    except:
        print('the script file is missing.')
except:
    print('Ther datafile is missing')